<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tic Tac Toe" Height="350" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition  />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  />
            <ColumnDefinition  />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

       
        <Button x:Name="Button0" Grid.Row="0" Grid.Column="0" FontSize="30" Click="Button_Click" />
        <Button x:Name="Button1" Grid.Row="0" Grid.Column="1" FontSize="30" Click="Button_Click" />
        <Button x:Name="Button2" Grid.Row="0" Grid.Column="2" FontSize="30" Click="Button_Click" />
        <Button x:Name="Button3" Grid.Row="1" Grid.Column="0" FontSize="30" Click="Button_Click" />
        <Button x:Name="Button4" Grid.Row="1" Grid.Column="1" FontSize="30" Click="Button_Click" />
        <Button x:Name="Button5" Grid.Row="1" Grid.Column="2" FontSize="30" Click="Button_Click" />
        <Button x:Name="Button6" Grid.Row="2" Grid.Column="0" FontSize="30" Click="Button_Click" />
        <Button x:Name="Button7" Grid.Row="2" Grid.Column="1" FontSize="30" Click="Button_Click" />
        <Button x:Name="Button8" Grid.Row="2" Grid.Column="2" FontSize="30" Click="Button_Click" />
    </Grid>
</Window>
